<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_marginBottom="@dimen/dividor_padding_bottom"
  android:layout_marginTop="@dimen/dividor_padding_bottom"
  android:layout_marginRight="@dimen/interior_padding_left" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_marginLeft="@dimen/interior_padding_left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/secondJobField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/result_list_dividor_padding"
            android:layout_marginBottom="@dimen/result_list_dividor_padding"
            android:text="TextView" />

        <TextView
            android:id="@+id/thirdJobField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="90"
        android:gravity = "center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_right_arrow" />

    </LinearLayout>

</LinearLayout>