<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayoutBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFilterJobType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dividor_padding_bottom"
            android:text="JOB TYPE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/interior_padding_left"
            android:layout_marginRight="@dimen/interior_padding_right"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/fullTimeBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Time" />

            <CheckBox
                android:id="@+id/partTimeBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Part Time" />

            <CheckBox
                android:id="@+id/internBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intern" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutFilterOccupation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView2"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dividor_padding_bottom"
            android:layout_marginTop="@dimen/dividor_padding_top"
            android:text="CATEGORY" />

        <Button
            android:id="@+id/select_colours"
            android:layout_width="match_parent"
            android:background="@drawable/category_button"
            android:layout_marginLeft="@dimen/interior_padding_left"
            android:layout_marginRight="@dimen/interior_padding_right"
            android:layout_height="wrap_content"
            android:textStyle="bold"
        	android:shadowColor="@color/white"
        	android:shadowDx="2"
        	android:shadowDy="2"
        	android:shadowRadius="2"
        	android:textColor="@color/category_button_border"
            android:text="Pick Category" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dividor_padding_bottom"
            android:layout_marginTop="@dimen/dividor_padding_top"
            android:text="COMPANY" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/interior_padding_left"
            android:layout_marginRight="@dimen/interior_padding_right"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView4"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dividor_padding_bottom"
            android:layout_marginTop="@dimen/dividor_padding_top"
            android:text="STATE"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/interior_padding_left"
            android:layout_marginRight="@dimen/interior_padding_right"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSearchButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        
        <TextView
            android:id="@+id/textView4"
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dividor_padding_bottom"
            android:layout_marginTop="@dimen/dividor_padding_top"
            android:text="SEARCH"/>

        <Button
            android:id="@+id/searchJobs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_button"
            android:layout_marginLeft="@dimen/interior_padding_left"
            android:layout_marginRight="@dimen/interior_padding_right"
            android:textStyle="bold"
        	android:shadowColor="#696969"
        	android:shadowDx="2"
        	android:shadowDy="2"
        	android:shadowRadius="2"
        	android:textColor="#FFFFFF"
            android:text="SEARCH" />

    </LinearLayout>

</LinearLayout>
