<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dividor_padding_bottom"
                android:text="FIRST NAME" />

            <EditText
                android:id="@+id/searchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interior_padding_left"
                android:layout_marginRight="@dimen/interior_padding_right"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView1"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dividor_padding_bottom"
                android:layout_marginTop="@dimen/dividor_padding_top"
                android:text="LAST NAME" />

            <EditText
                android:id="@+id/searchLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interior_padding_left"
                android:layout_marginRight="@dimen/interior_padding_right"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView1"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dividor_padding_bottom"
                android:layout_marginTop="@dimen/dividor_padding_top"
                android:text="CITY" />

            <EditText
                android:id="@+id/searchLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interior_padding_left"
                android:layout_marginRight="@dimen/interior_padding_right"
                android:ems="10" />

            <TextView
                android:id="@+id/textView1"
                style="?android:listSeparatorTextViewStyle"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dividor_padding_bottom"
                android:layout_marginTop="@dimen/dividor_padding_top"
                android:text="METROPOLITAN AREA" />

            <EditText
                android:id="@+id/searchMetroArea"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interior_padding_left"
                android:layout_marginRight="@dimen/interior_padding_right"
                android:ems="10" />

            <TextView
                android:id="@+id/textView1"
                android:visibility="gone"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dividor_padding_bottom"
                android:layout_marginTop="@dimen/dividor_padding_top"
                android:text="EMPLOYER" />

            <EditText
                android:id="@+id/searchEmployer"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interior_padding_left"
                android:layout_marginRight="@dimen/interior_padding_right"
                android:ems="10" />

            <TextView
                android:id="@+id/textView1"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dividor_padding_bottom"
                android:layout_marginTop="@dimen/dividor_padding_top"
                android:text="STATE" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/interior_padding_left"
                android:layout_marginRight="@dimen/interior_padding_right" />

            <TextView
                android:id="@+id/textView4"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dividor_padding_bottom"
                android:layout_marginTop="@dimen/dividor_padding_top"
                android:text="SEARCH" />

            <Button
                android:id="@+id/searchAlumni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dividor_padding_bottom"
                android:layout_marginLeft="@dimen/interior_padding_left"
                android:layout_marginRight="@dimen/interior_padding_right"
                android:background="@drawable/search_button"
                android:shadowColor="#696969"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="2"
                android:text="SEARCH"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>