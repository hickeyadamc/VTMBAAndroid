<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background_color"
    android:orientation="vertical"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/vtmba_logo_height"
        android:layout_marginLeft="@dimen/vtmba_logo_margin_left"
        android:layout_marginTop="@dimen/login_screen_spacing"
        android:src="@drawable/mba_logo" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="@dimen/interior_padding_left"
        android:layout_marginRight="@dimen/interior_padding_right"
        android:layout_marginTop="@dimen/login_screen_spacing"
        android:background="@drawable/login_edit_text_background"
        android:ems="10"
        android:hint="Username"
        android:paddingLeft="20dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_edit_text_height"
        android:layout_marginLeft="@dimen/interior_padding_left"
        android:layout_marginRight="@dimen/interior_padding_right"
        android:layout_marginTop="@dimen/login_screen_spacing"
        android:background="@drawable/login_edit_text_background"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/interior_padding_left"
        android:layout_marginRight="@dimen/interior_padding_right"
        android:layout_marginTop="@dimen/login_screen_spacing"
        android:background="@drawable/search_button"
        android:shadowColor="#696969"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dividor_padding_top"
        android:layout_marginLeft="@dimen/interior_padding_left"
        android:layout_marginRight="@dimen/interior_padding_right"
        android:text="VT MBA Alumni must &apos;opt in&apos; through the alumni database (www.alumni.mba.vt.edu)"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>